<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="80dp"
        app:layout_anchor="@+id/emptyView"
        app:layout_anchorGravity="top|center"
        tools:listitem="@layout/item_mind_drop" />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No items captured yet.\nTap the + button to start."
        android:gravity="center"
        android:visibility="gone"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_gravity="center"
        tools:visibility="visible"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/processImageButton"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Process Image"
        app:icon="@android:drawable/ic_menu_gallery"
        app:layout_anchor="@id/fab"
        app:layout_anchorGravity="top|start"
        android:translationY="-30dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Capture new item"
        app:srcCompat="@android:drawable/ic_input_add" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>